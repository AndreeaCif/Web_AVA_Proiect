@page
@model Web_AVA_Proiect.Pages.Masaje.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a style="color:lightseagreen; font-weight:bold" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Masaj[0].Denumire)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Masaj[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Masaj[0].Durata)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Masaj) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denumire)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durata)
            </td>
            <td>
                <a style="color:lightseagreen; font-weight:bold" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a style="color:lightseagreen; font-weight:bold" asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a style="color:lightseagreen; font-weight:bold" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
