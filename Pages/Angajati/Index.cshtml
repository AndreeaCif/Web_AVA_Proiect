@page
@model Web_AVA_Proiect.Pages.Angajati.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a style="color:lightseagreen; font-weight:bold" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Nr_telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Angajat[0].Salariu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Angajat) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nr_telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salariu)
            </td>
            <td>
                <a style="color:lightseagreen; font-weight:bold" asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a style="color:lightseagreen; font-weight:bold" asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a style="color:lightseagreen; font-weight:bold" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
